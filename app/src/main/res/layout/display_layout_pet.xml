<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="315dp"
    android:background="#e6e6ff"
    android:layout_margin="5dp"
    android:gravity="center"
    android:layout_marginStart="@dimen/small"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginLeft="@dimen/small">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/stdimage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/noimage" />





    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/small"
        android:paddingRight="@dimen/small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textStyle="bold"
                android:maxLines="1"
                android:fontFamily="serif"
                android:textColor=" #990000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dog name"
                android:textStyle="bold"
                android:maxLines="1"
                android:fontFamily="serif"
                android:textColor=" #990000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="#0000ff"
                android:fontFamily="serif"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPetAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dog age"
                android:textStyle="bold"
                android:maxLines="1"
                android:fontFamily="serif"
                android:textColor="#0000ff"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="#145214"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPetPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(In Nrs)"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="#145214"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Pieces:"
                android:textStyle="bold"
                android:maxLines="1"
                android:fontFamily="serif"
                android:textColor="#666600"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPetPiece"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Availablity"
                android:textStyle="bold"
                android:maxLines="1"
                android:fontFamily="serif"
                android:textColor="#666600"
                android:textSize="17sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Description:"
                android:textStyle="bold"
                android:textColor=" #4d004d"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvPetDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="describe about dog"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textColor=" #4d004d"
                android:textSize="12sp" />
        </LinearLayout>





        <Button
            android:id="@+id/btnFavourite"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="#2eb82e"
            android:layout_gravity="center"
            android:text="Add to Favourite"
            android:fontFamily="serif"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/like"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_marginTop="0dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_delete"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/edit"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>