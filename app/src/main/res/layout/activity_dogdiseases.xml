<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DogdiseasesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgdashboard"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dogs Health Issues"
            android:textSize="40dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="1"

            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:src="@drawable/alemed"

                    android:layout_marginLeft="100dp"
                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="215dp"
                    android:layout_height="87dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:text="Recommended Medicine(Zyrtec)"
                    android:textColor="@color/black"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginLeft="5dp"
                    android:text="Skin Allergies"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>


            </androidx.cardview.widget.CardView>



        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="1"

            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"

                    android:layout_marginLeft="100dp"
                    android:padding="5dp"
                    android:src="@drawable/earmed" />

                <TextView
                    android:layout_width="173dp"
                    android:layout_height="87dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="40dp"
                    android:text="Recommended Medicine(Clavacillin)"
                    android:textColor="@color/black"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ear Infection"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>


            </androidx.cardview.widget.CardView>



        </GridLayout> <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="1"

        android:layout_margin="5dp"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center_horizontal"
        android:columnOrderPreserved="false">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardCornerRadius="12dp"

            android:layout_marginLeft="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="10dp">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:src="@drawable/skinmed"

                android:layout_marginLeft="100dp"
                android:padding="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="215dp"
                android:layout_height="87dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:text="Recommended Medicine(Betagen)"
                android:textColor="@color/black"

                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="5dp"
                android:text="Skin Infection"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>


        </androidx.cardview.widget.CardView>



    </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="1"

            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:src="@drawable/tickmed"

                    android:layout_marginLeft="100dp"
                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="215dp"
                    android:layout_height="87dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:text="Recommended Medicine(Jmxu's)"
                    android:textColor="@color/black"

                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ticks/Fleas"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold"/>


            </androidx.cardview.widget.CardView>



        </GridLayout>






    </LinearLayout>


</LinearLayout>