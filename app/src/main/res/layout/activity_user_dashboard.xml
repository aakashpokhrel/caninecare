<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserDashboard"
    android:id="@+id/drawyerLayout"
    android:background="@drawable/bgdashboard"
    >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserDashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:maxLines="2"
                android:text="Canine Care"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/dashlogo" />





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#fff"
                android:text="where pet becomes family"
                android:fontFamily="serif"/>
        </LinearLayout>





        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="40dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/improduct"
                    android:layout_height="90dp"
                    android:src="@drawable/product"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Products"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="55dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/imcart"
                    android:layout_height="90dp"
                    android:src="@drawable/cart"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:text="Cart"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>









        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/imadopt"
                    android:layout_height="90dp"
                    android:src="@drawable/adopt"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:text="Adopt"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="55dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:id="@+id/imfavourite"
                    android:layout_width="205dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/favourites"
                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="Favourites"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="40dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/immedical"
                    android:layout_height="90dp"
                    android:src="@drawable/medica"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="Medical"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="150dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="55dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/imaboutus"
                    android:layout_height="90dp"
                    android:src="@drawable/about"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:text="About Us"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>









        </GridLayout>



    </LinearLayout>


</ScrollView>

    <com.google.android.material.navigation.NavigationView

        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/user_menu"
        android:fitsSystemWindows="true"/>


</androidx.drawerlayout.widget.DrawerLayout>