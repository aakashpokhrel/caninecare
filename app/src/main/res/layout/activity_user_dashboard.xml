<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserDashboard"
    android:id="@+id/drawyerLayout"
    >

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg12"
    android:layout_height="match_parent"
    tools:context=".ui.UserDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="40dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/improfile"
                    android:layout_height="90dp"
                    android:src="@drawable/profile"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:text="Profile"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="55dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/imhome"
                    android:layout_height="90dp"
                    android:src="@drawable/home"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:text="Home"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>









        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="40dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/improduct"
                    android:layout_height="90dp"
                    android:src="@drawable/product"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Products"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="55dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/imcart"
                    android:layout_height="90dp"
                    android:src="@drawable/cart"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:text="Cart"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>









        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="40dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/imadopt"
                    android:layout_height="90dp"
                    android:src="@drawable/adopt"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:text="Adopt"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="55dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/immedical"
                    android:layout_height="90dp"
                    android:src="@drawable/medica"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="Medical"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="40dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/impayment"
                    android:layout_height="90dp"
                    android:src="@drawable/payment"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="Payment"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="55dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/imaboutus"
                    android:layout_height="90dp"
                    android:src="@drawable/about"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:text="About Us"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>









        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="40dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:id="@+id/imfeedback"
                    android:layout_width="200dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:src="@drawable/feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Feedback"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="55dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">


                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/imlogout"
                    android:layout_height="90dp"
                    android:src="@drawable/log"
                    android:layout_marginTop="18dp"

                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:text="Logout"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>


</ScrollView>

    <com.google.android.material.navigation.NavigationView

        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/user_menu"
        android:fitsSystemWindows="true"/>


</androidx.drawerlayout.widget.DrawerLayout>