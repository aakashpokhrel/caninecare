<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimg"
    tools:context=".ui.AboutActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About App"
        android:fontFamily="@font/bungee"
        android:textSize="20dp"
        android:layout_marginTop="25dp"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/appointbg"
        android:orientation="vertical"
        android:paddingRight="12dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Canine Care is an online service designated to improve the quality of life of dogs in context of Nepal. The culture of owning and domesticating pets, especially dogs can be seen increasingly in Nepalese society. Dogs are loved and worshipped in Nepal. They are of religious and social significance. Dogs are even considered as a man's best friend. "
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:fontFamily="serif"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Canine Care Nepal aims at being the online portal to host all the canine-related stuffs and services such as foster homes and shelter, immediate health care and rights to provide utmost care to dogs and raise them properly. It will host all the necessary information, tips and suggestions necessary for the proper supervision of the dogs.
"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:fontFamily="serif"/>
    </LinearLayout>

</LinearLayout>